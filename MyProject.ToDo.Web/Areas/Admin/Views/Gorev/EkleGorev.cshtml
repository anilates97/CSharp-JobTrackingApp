@model GorevAddViewModel;
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form asp-action="EkleGorev" method="post" class="w-75 mx-auto p-3">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz</label>
        <span asp-validation-for="AciliyetId" class="text-danger"></span>
        <select asp-for="AciliyetId" class="form-control" asp-items="ViewBag.Aciliyetler">
            <option value="-1" hidden>Seçiniz</option>  <!-- asp-items ' a yazdığımız viewbag tek tek dolaşıp itemleri option altına yazacak. -->
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm" asp-action="EkleGorev" asp-controller="Gorev"><i class="fas fa-check mr-2"></i> Kaydet</button>

</form>

@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>  @*ClientSide Validationu da buraya eklemiş olduk*@
}

